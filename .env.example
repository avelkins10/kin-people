# Database (Supabase PostgreSQL connection string)
# Format: postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres?sslmode=require
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres?sslmode=require

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://[project-ref].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Clerk Auth
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_...
CLERK_SECRET_KEY=sk_...
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/login
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/signup
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# SignNow Integration
SIGNNOW_API_KEY=your_api_key
SIGNNOW_API_SECRET=your_api_secret
SIGNNOW_TEMPLATE_ID=your_template_id
SIGNNOW_WEBHOOK_SECRET=your_webhook_secret
SIGNNOW_FROM_EMAIL=noreply@example.com
